// Below the simplified structure for the boilertemplate

<body>
    <body-band>
    <!-- full-screen-width band -->

        <grid>
        <!-- the grid is centered and its width is equal to @grid-width -->

            <grid-row required-HTML-classes="padding, h-padding, v-padding, full-padding, full-h-padding or full-v-padding">
            <!-- each row must contain 1 to 12 collumns. Combined col-units should always be 12 -->

                <grid-col>
                <!-- col-unit should be 1 to 12 -->

                    <content-wrapper required-classes="padding">
                        <content>
                            <text />
                            <image />
                        </content>
                    </content-wrapper>
                </grid-col>

                <grid-col>
                    <content-wrapper>
                        <content>
                            <text />
                            <image />
                        </content>
                    </content-wrapper>
                </grid-col>
            </grid-row>

            <grid-row>
                <content-box>
                <!-- the content-box used to draw a box (background-color and/or border) around all columns in this row -->

                    <grid-col>
                        <content-wrapper>
                            <content>
                                <text />
                                <image />
                            </content>
                        </content-wrapper>
                    </grid-col>
                </content-box>
            </grid-row>

            <grid-row>
                <grid-col>
                    <content-wrapper>
                        <content>
                            <text />
                            <image />
                        </content>
                    </content-wrapper>
                </grid-col>
            </grid-row>

        </grid>
    </body-band>

    <body-band>
        <grid>

            <grid-row>
                <content-wrapper>
                    <content>
                        <text/>
                        <image/>
                    </content>
                </content-wrapper>
            </grid-row>

        </grid>
    </body-band>

</body>
